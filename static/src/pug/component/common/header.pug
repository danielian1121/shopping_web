mixin header()
  header.header
    a.header__logo.logo(href = '/')
      +image({
        alt: 'logo',
        className: 'logo__image',
        src: 'logo.png'
      })
    form.header__search.search(autocomplete = 'off')
      input.search__text(type = 'text', placeholder = '搜尋', maxlength = 128, value)
    button.header__searchSubmit
    nav.header__nav.nav
      ul.nav__link.link
        li.link__login Login
  script(src = 'https://cdn.jsdelivr.net/npm/sweetalert2@7.29.0/dist/sweetalert2.min.js')
  link(rel = 'stylesheet', href = 'https://cdn.jsdelivr.net/npm/sweetalert2@7.29.0/dist/sweetalert2.min.css')
